<h1><%= @post.title %></h1>


<div class="row">
  <div class="col-md-8">
    <% if @post.summary.present? %>
      <p><%= @post.summary.description %></p>
    <% else %>
      <p> "This post has no summary yet. Why Not click below and create one?" </p>
  <%= link_to "Create Summary", new_summary_path(@post), class: 'btn btn-success' %>
    <% end %>
    <p><%= @post.body %></p>
  </div>
  <div class="col-md-4">
    <% if policy(@post).edit? %>
      <%= link_to "Edit", edit_topic_post_path(@topic, @post), class: 'btn btn-success' %>
    <% end %> 
  </div>
</div>

